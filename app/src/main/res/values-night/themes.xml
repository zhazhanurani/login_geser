<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Login_geser" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <!-- Base application theme with ActionBar. -->
    <style name="Base.Theme.Login_geser.WithActionBar"
        parent="Theme.Material3.DayNight">
        <!-- Customize your dark theme here, similar to the theme without ActionBar.
       -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>


    <!-- Themes for night mode applied to the application or specific activities. -->
    <style name="Theme.MyCourse" parent="Base.Theme.Login_geser" />

    <style name="Theme.MyCourse.WithActionBar"
        parent="Base.Theme.Login_geser.WithActionBar">
        <!-- Set ActionBar background color for night mode -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionBarStyle">@style/MyCustomActionBarNight</item>
    </style>

    <!-- Custom ActionBar style for night mode -->
    <style name="MyCustomActionBarNight" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/purple_500</item>
        <item name="titleTextStyle">@style/MyActionBarTitleTextNight</item>
    </style>

    <!-- Text style for ActionBar title in night mode -->
    <style name="MyActionBarTitleTextNight" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>