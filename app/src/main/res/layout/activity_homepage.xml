<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="25dp"
    tools:context=".Homepage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dynapuff_condensed_medium"
        android:text="Homepage"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_margin="20dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back.. "
            android:fontFamily="@font/dynapuff_semicondensed_regular"/>
        <TextView
            android:id="@+id/put_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_500"
            android:fontFamily="@font/dynapuff_semicondensed_regular"
            android:text="username"/>

    </LinearLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img"
        android:layout_margin="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How are YOU doing Today?"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_sad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☹️"
            android:backgroundTint="@color/purple_500"
            />

        <Button
            android:id="@+id/btn_happy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="😁"
            android:backgroundTint="@color/purple_500"
            android:layout_marginStart="10dp"
            />


    </LinearLayout>




</LinearLayout>